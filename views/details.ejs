<% include ./partials/header %>

    <% if (msg != null) { %>
        <div class="alert alert-danger">
            <%= msg %>
        </div>
        <% } %>

            <% if (filme != null) { %>
                <div class="row" style="padding: 0px;">
                    <div class="col-md-6">
                        <img style="max-height: 780px;max-width:100%;display:block;" src="http://image.tmdb.org/t/p/w780<%= filme.poster_path %>">
                    </div>
                    <div class="col-md-6">
                        <h2><%= filme.title %></h2>
                        <br/>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6"><i class="far fa-minus-square"></i></div>
                            <div class="col-md-6" 
                            style="text-align: right;"><i class="far fa-plus-square"></i></div>
                        </div>
                        <div class="card mb-3">
                            
                            <div class="card-header progress-bar progress-bar-striped progress-bar-animated bg-info"
                            role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"
                            style="width: 35%;"><output style="font-weight: 800;color: #eee;">50%</output></div>

                            <h5 class="card-header">Sinopse</h5>
                            <div class="card-body">
                                <div class="card-text alert alert-info"><%= filme.overview %></div>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <% filme.genres.forEach(function(genre) { %>
                                        <% if (genre.id == 878) { %>
                                            <span class="badge badge-primary"><%= genre.name %></span>
                                        <% } else { %>
                                            <span class="badge badge-secondary"><%= genre.name %></span>
                                        <% } %> 
                                    <% }) %>
                                </li>
                                <li class="list-group-item">Duração: <%= filme.runtime %> | Lançamento em <%= filme.release_date %>
                                 </li>
                                <li class="list-group-item">Popularidade: <%= filme.popularity %>
                                | IMDB: <%= filme.vote_average %></li>
                                <li class="list-group-item">Dirigido por <strong><%= production.crew[0].name %></strong></li>
                                <li class="list-group-item">
                                    <div class="range range-info">
                                        <input type="range" name="range" min="1" max="100" value="50" onchange="rangeInfo.value=value">
                                        <output id="rangeInfo">50</output>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                        <button type="button" class="btn btn-primary btn-lg btn-block">Computar voto</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <% } %>

                