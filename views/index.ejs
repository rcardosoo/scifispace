<% include ./partials/header %>
    <% include ./partials/search %>

        <% if (msg != null) { %>
            <% if (typeof error != 'undefined') { %>
                <% if (error) { %>
                    <div class="alert alert-danger">
                        <%= msg %>
                    </div>
                    <% } else { %>
                        <div class="alert alert-success">
                            <%= msg %>
                        </div>
                        <% } %>
                            <% } else { %>
                                <div class="alert alert-info">
                                    <%= msg %>
                                </div>
                                <% } %>
                                    <% } %>

                                        <% if (filmelist != null) { %>
                                            <div class="row">
                                                <% filmelist.forEach(function(filme) { %>
                                                    <div class="col-md-3">
                                                        <div about="#<%= filme.title %>" typeof="schema:Movie" class="card mb-3">
                                                            <a href="/filme/<%= filme.id %>" style="margin: 0px; padding: 0px; text-decoration: none;">
                                                                <img style="max-height: 342px;width: 100%;max-width:100%;display:block;" src="http://image.tmdb.org/t/p/w342<%= filme.poster_path %>">
                                                            </a>
                                                            <div class="card-body">
                                                                <h2 style="font-size: 10pt;">
                                                                    <strong property="schema:name">
                                                                        <%= filme.title %>
                                                                    </strong>
                                                                </h2>
                                                            </div>
                                                            <hr />
                                                            <div class="card-body">
                                                                <% if (filme.voto == '0') { %>
                                                                    <div property="schema:aggregateRating" typeof="schema:AggregateRating" class="card-header progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" aria-valuenow="75"
                                                                        aria-valuemin="0" aria-valuemax="100" style="width: 100%;max-height: 40px;">
                                                                        <output property="schema:ratingValue" style="font-weight: 800;font-size: 8pt;color: #eee;">NÃ£o houve votos</output>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div property="schema:aggregateRating" typeof="schema:AggregateRating" class="card-header progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" aria-valuenow="75"
                                                                            aria-valuemin="0" aria-valuemax="100" style="max-height: 40px;width: <%= filme.voto+'%' %>;">
                                                                            <output property="schema:ratingValue" style="font-weight: 800;font-size: 8pt;color: #eee;">
                                                                                <%= filme.voto %>%</output>
                                                                        </div>
                                                                        <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                            </div>
                                            <% } %>